                                    <input type="password" class="form-control" id="signinPassword" name="password" placeholder="Password" required>
                                    <label for="signinPassword">Password</label>
                                </div>
                                <button type="submit" class="btn btn-warning w-100 py-3 fw-bold rounded-3">
                                    <i class="fas fa-sign-in-alt me-2"></i>Sign In to Dashboard
                                </button>
                            </form>
                            
                            <div class="text-center mt-3">
                                <p class="text-white-50 mb-0">
                                    Demo Account: <code class="text-warning">nanthekumar.2011@mitb.smu.edu.sg</code> / <code class="text-warning">password123</code>
                                </p>
                            </div>
