<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transcend Body - Daily Fitness Tracker</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <style>
        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            in-height: 100vh;
            position: relative;
            overflow: hidden;
        }
        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="%23ffffff" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="%23ffffff" opacity="0.1"/><circle cx="50" cy="10" r="1" fill="%23ffffff" opacity="0.1"/><circle cx="10" cy="50" r="1" fill="%23ffffff" opacity="0.1"/><circle cx="90" cy="30" r="1" fill="%23ffffff" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
            opacity: 0.3;
        }
        .glass-card {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 20px;
        }
        .feature-card {
            transition: all 0.3s ease;
            border: none;
            border-radius: 20px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        }
        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        }
        .cta-buttons .btn {
            border-radius: 50px;
            padding: 12px 30px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
        }
        .cta-buttons .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }
        .dimension-icon {
            width: 70px;
            height: 70px;
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            font-size: 28px;
        }
        .time-slot {
            border-radius: 15px;
            padding: 20px;
            text-align: center;
            color: white;
            transition: all 0.3s ease;
        }
        .time-slot:hover {
            transform: scale(1.05);
        }
        .morning-slot { background: linear-gradient(135deg, #ffc107, #fd9621); }
        .afternoon-slot { background: linear-gradient(135deg, #17a2b8, #138496); }
        .evening-slot { background: linear-gradient(135deg, #6f42c1, #5a2d91); }
        .stats-item {
            text-align: center;
            padding: 20px;
        }
        .animate-on-scroll {
            opacity: 0;
            transform: translateY(30px);
            transition: all 0.6s ease;
        }
        .animate-on-scroll.visible {
            opacity: 1;
            transform: translateY(0);
        }
        .auth-section {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(15px);
            border-radius: 25px;
            padding: 30px;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        .auth-toggle {
            background: rgba(255, 255, 255, 0.2);
            border-radius: 15px;
            padding: 5px;
            margin-bottom: 25px;
        }
        .auth-toggle button {
            border: none;
            background: none;
            color: white;
            padding: 10px 20px;
            border-radius: 10px;
            transition: all 0.3s ease;
            flex: 1;
        }
        .auth-toggle button.active {
            background: white;
            color: #667eea;
            font-weight: 600;
        }
        .form-floating .form-control {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.3);
            color: white;
        }
        .form-floating .form-control:focus {
            background: rgba(255, 255, 255, 0.15);
            border-color: rgba(255, 255, 255, 0.5);
            box-shadow: none;
            color: white;
        }
        .form-floating label {
            color: rgba(255, 255, 255, 0.8);
        }
        .form-floating .form-control::placeholder {
            color: transparent;
        }
        
        /* Dot animations for landing page */
        @keyframes dotPulse {
            0%, 100% { 
                transform: scale(1) translateY(0px); 
                opacity: 1; 
            }
            50% { 
                transform: scale(1.15) translateY(-2px); 
                opacity: 0.85; 
            }
        }
    </style>
</head>
<body>
    <!-- Hero Section -->
    <section class="hero-section d-flex align-items-center">
        <div class="container position-relative">
            <div class="row align-items-center min-vh-100 py-5">
                <!-- Left Content -->
                <div class="col-lg-7 mb-5 mb-lg-0">
                    <div class="text-white animate-on-scroll">
                        <!-- Brand Header -->
                        <div class="d-flex align-items-center mb-4">
                            <div class="glass-card p-3 me-3">
                                <i class="fas fa-dumbbell fa-2x text-white"></i>
                            </div>
                            <div>
                                <h1 class="display-4 fw-bold mb-0">Transcend Body</h1>
                                <span class="badge bg-warning text-dark fs-6 fw-bold mb-2" style="letter-spacing:1px;">The 90-Day Body Transformation Challenge</span>
                                <p class="fs-5 mb-0 opacity-75">Daily Fitness Tracker</p>
                            </div>
                        </div>
                        
                        <!-- Main Description -->
                        <p class="fs-5 mb-4 opacity-90 lh-base">
                            Transform your body and mind in just 90 days. Plan, track, and achieve your fitness goals across workouts, nutrition, recovery, and mindset. Join the challenge and unlock your best self!
                        </p>
                        
                        <!-- Time Slots Preview -->
                        <div class="row g-3 mb-4">
                            <div class="col-6 col-md-3">
                                <div class="time-slot morning-slot">
                                    <i class="fas fa-sun fa-2x mb-2"></i>
                                    <h6 class="fw-bold mb-1">Morning</h6>
                                    <small>Start Strong</small>
                                </div>
                            </div>
                            <div class="col-6 col-md-3">
                                <div class="time-slot afternoon-slot">
                                    <i class="fas fa-sun fa-2x mb-2"></i>
                                    <h6 class="fw-bold mb-1">Afternoon</h6>
                                    <small>Stay Active</small>
                                </div>
                            </div>
                            <div class="col-6 col-md-3">
                                <div class="time-slot evening-slot">
                                    <i class="fas fa-moon fa-2x mb-2"></i>
                                    <h6 class="fw-bold mb-1">Evening</h6>
                                    <small>Recover Well</small>
                                </div>
                            </div>
                            <div class="col-6 col-md-3">
                                <div class="time-slot night-slot" style="background: linear-gradient(135deg, #232b5d, #3a3a72);">
                                    <i class="fas fa-star fa-2x mb-2"></i>
                                    <h6 class="fw-bold mb-1">Night</h6>
                                    <small>Reflect & Recharge</small>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Target Audience with Centered Dots -->
                        <div class="text-center opacity-90">
                            <!-- Centered Dots Above Text -->
                            <div class="d-flex justify-content-center align-items-center mb-3" style="gap: 16px;">
                                <div class="rounded-circle" style="
                                    width: 14px; 
                                    height: 14px; 
                                    background: linear-gradient(135deg, #ffd700, #ffed4e); 
                                    box-shadow: 0 3px 12px rgba(255,215,0,0.5);
                                    animation: dotPulse 2s infinite;
                                    animation-delay: 0s;
                                "></div>
                                <div class="rounded-circle" style="
                                    width: 14px; 
                                    height: 14px; 
                                    background: linear-gradient(135deg, #4ecdc4, #44a08d); 
                                    box-shadow: 0 3px 12px rgba(78,205,196,0.5);
                                    animation: dotPulse 2s infinite;
                                    animation-delay: 0.4s;
                                "></div>
                                <div class="rounded-circle" style="
                                    width: 14px; 
                                    height: 14px; 
                                    background: linear-gradient(135deg, #9b59b6, #8e44ad); 
                                    box-shadow: 0 3px 12px rgba(155,89,182,0.5);
                                    animation: dotPulse 2s infinite;
                                    animation-delay: 0.8s;
                                "></div>
                            </div>
                            <!-- Text Below Dots -->
                            <p class="fw-semibold mb-0" style="font-size: 15px;">
                                Perfect for Fitness Beginners • Busy Professionals • Coaching Clients
                            </p>
                        </div>
                    </div>
                </div>
                
                <!-- Right Auth Section -->
                <div class="col-lg-5">
                    <div class="auth-section animate-on-scroll">
                        <!-- Auth Toggle -->
                        <div class="auth-toggle d-flex">
                            <button type="button" class="auth-tab active" data-tab="signin">
                                <i class="fas fa-sign-in-alt me-2"></i>Sign In
                            </button>
                            <button type="button" class="auth-tab" data-tab="signup">
                                <i class="fas fa-user-plus me-2"></i>Create Account
                            </button>
                        </div>
                        
                        <!-- Sign In Form -->
                        <div id="signin-form" class="auth-form">
                            <div class="text-center mb-4">
                                <h4 class="text-white fw-bold">Welcome Back!</h4>
                                <p class="text-white-50 mb-0">Continue your fitness journey</p>
                            </div>
                            
                            <form action="/login" method="POST">
                                <% if (signinError) { %>
                                  <div class="alert alert-danger py-2"><%= signinError %></div>
                                <% } %>
                                <div class="form-floating mb-3">
                                    <input type="email" class="form-control" id="signinEmail" name="email" placeholder="Email Address" required value="<%= signinData?.email || '' %>">
                                    <label for="signinEmail">Email Address</label>
                                </div>
                                <div class="form-floating mb-4">
                                    <input type="password" class="form-control" id="signinPassword" name="password" placeholder="Password" required>
                                    <label for="signinPassword">Password</label>
                                </div>
                                <button type="submit" class="btn btn-warning w-100 py-3 fw-bold rounded-3">
                                    <i class="fas fa-sign-in-alt me-2"></i>Sign In to Dashboard
                                </button>
                            </form>
                            
                            <div class="text-center mt-3">
                                <p class="text-white-50 mb-0">

                                </p>
                            </div>
                        </div>
                        
                        <!-- Sign Up Form -->
                        <div id="signup-form" class="auth-form" style="display: none;">
                            <div class="text-center mb-4">
                                <h4 class="text-white fw-bold">Start Your Journey!</h4>
                                <p class="text-white-50 mb-0">Create your free account today</p>
                            </div>
                            
                            <form action="/register" method="POST">
                                <% if (signupError) { %>
                                  <div class="alert alert-danger py-2"><%= signupError %></div>
                                <% } %>
                                <div class="row g-3 mb-3">
                                    <div class="col-6">
                                        <div class="form-floating">
                                            <input type="text" class="form-control <% if (validationErrors?.firstName) { %>is-invalid<% } %>" id="firstName" name="firstName" placeholder="First Name" value="<%= signupData?.firstName || '' %>">
                                            <label for="firstName">First Name</label>
                                            <% if (validationErrors?.firstName) { %>
                                              <div class="invalid-feedback"><%= validationErrors.firstName[0] %></div>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-floating">
                                            <input type="text" class="form-control <% if (validationErrors?.lastName) { %>is-invalid<% } %>" id="lastName" name="lastName" placeholder="Last Name" value="<%= signupData?.lastName || '' %>">
                                            <label for="lastName">Last Name</label>
                                            <% if (validationErrors?.lastName) { %>
                                              <div class="invalid-feedback"><%= validationErrors.lastName[0] %></div>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="email" class="form-control <% if (validationErrors?.email) { %>is-invalid<% } %>" id="signupEmail" name="email" placeholder="Email Address" required value="<%= signupData?.email || '' %>">
                                    <label for="signupEmail">Email Address</label>
                                    <% if (validationErrors?.email) { %>
                                      <div class="invalid-feedback"><%= validationErrors.email[0] %></div>
                                    <% } %>
                                </div>
                                <div class="form-floating mb-4">
                                    <input type="password" class="form-control <% if (validationErrors?.password) { %>is-invalid<% } %>" id="signupPassword" name="password" placeholder="Password" required>
                                    <label for="signupPassword">Password</label>
                                    <% if (validationErrors?.password) { %>
                                      <div class="invalid-feedback"><%= validationErrors.password[0] %></div>
                                    <% } %>
                                </div>
                                <div class="form-floating mb-4">
                                    <input type="password" class="form-control" id="signupConfirmPassword" name="confirmPassword" placeholder="Confirm Password" required>
                                    <label for="signupConfirmPassword">Confirm Password</label>
                                </div>
                                <button type="submit" class="btn btn-success w-100 py-3 fw-bold rounded-3">
                                    <i class="fas fa-rocket me-2"></i>Create Account & Start
                                </button>
                            </form>
                        </div>

                        <!-- Show success message above sign-in form -->
                        <% if (successMessage) { %>
                          <div class="alert alert-success py-2"><%= successMessage %></div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-5 bg-white">
        <div class="container">
            <div class="text-center mb-5 animate-on-scroll">
                <h2 class="display-6 fw-bold mb-3">Four Dimensions of Fitness</h2>
                <p class="lead text-muted">Comprehensive tracking across all aspects of your wellness journey</p>
            </div>
            
            <div class="row g-4">
                <div class="col-md-6 col-lg-3 animate-on-scroll">
                    <div class="feature-card card h-100 text-center p-4">
                        <div class="dimension-icon bg-danger bg-opacity-10">
                            <i class="fas fa-dumbbell text-danger"></i>
                        </div>
                        <h5 class="fw-bold mb-3">Workouts</h5>
                        <p class="text-muted">Track your daily exercise routine</p>
                    </div>
                </div>
                
                <div class="col-md-6 col-lg-3 animate-on-scroll">
                    <div class="feature-card card h-100 text-center p-4">
                        <div class="dimension-icon bg-warning bg-opacity-10">
                            <i class="fas fa-apple-alt text-warning"></i>
                        </div>
                        <h5 class="fw-bold mb-3">Nutrition</h5>
                        <p class="text-muted">Monitor your daily nutrition habits</p>
                    </div>
                </div>
                
                <div class="col-md-6 col-lg-3 animate-on-scroll">
                    <div class="feature-card card h-100 text-center p-4">
                        <div class="dimension-icon bg-info bg-opacity-10">
                            <i class="fas fa-bed text-info"></i>
                        </div>
                        <h5 class="fw-bold mb-3">Recovery</h5>
                        <p class="text-muted">Prioritize rest and recovery</p>
                    </div>
                </div>
                
                <div class="col-md-6 col-lg-3 animate-on-scroll">
                    <div class="feature-card card h-100 text-center p-4">
                        <div class="dimension-icon bg-purple bg-opacity-10">
                            <i class="fas fa-brain text-purple"></i>
                        </div>
                        <h5 class="fw-bold mb-3">Mindset</h5>
                        <p class="text-muted">Build mental resilience</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- How It Works -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5 animate-on-scroll">
                <h2 class="display-6 fw-bold mb-3">How It Works</h2>
                <p class="lead text-muted">Simple steps to transform your daily routine</p>
            </div>
            
            <div class="row g-4">
                <div class="col-lg-4 animate-on-scroll">
                    <div class="text-center">
                        <div class="dimension-icon bg-primary">
                            <span class="text-white fw-bold fs-4">1</span>
                        </div>
                        <h5 class="fw-bold mb-3">Plan Your Day</h5>
                        <p class="text-muted">Add activities to Morning, Afternoon, and Evening time slots across all four fitness dimensions.</p>
                    </div>
                </div>
                
                <div class="col-lg-4 animate-on-scroll">
                    <div class="text-center">
                        <div class="dimension-icon bg-success">
                            <span class="text-white fw-bold fs-4">2</span>
                        </div>
                        <h5 class="fw-bold mb-3">Track Progress</h5>
                        <p class="text-muted">Mark activities as complete throughout the day and watch your completion rate improve.</p>
                    </div>
                </div>
                
                <div class="col-lg-4 animate-on-scroll">
                    <div class="text-center">
                        <div class="dimension-icon bg-warning">
                            <span class="text-white fw-bold fs-4">3</span>
                        </div>
                        <h5 class="fw-bold mb-3">Analyze Results</h5>
                        <p class="text-muted">Review detailed analytics, build streaks, and identify patterns for continuous improvement.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Final CTA -->
    <section class="py-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <div class="container">
            <div class="row align-items-center text-center text-lg-start">
                <div class="col-lg-8 mb-4 mb-lg-0">
                    <h3 class="display-6 fw-bold mb-2 text-white">Ready to Transform Your Body?</h3>
                    <p class="lead mb-0 text-white-50">Join thousands who have started their fitness transformation journey.</p>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <div class="cta-buttons">
                        <a href="/register" class="btn btn-warning btn-lg">
                            <i class="fas fa-rocket me-2"></i>Get Started Free
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Auth form toggle
        document.querySelectorAll('.auth-tab').forEach(tab => {
            tab.addEventListener('click', function() {
                const targetTab = this.dataset.tab;
                
                // Update active tab
                document.querySelectorAll('.auth-tab').forEach(t => t.classList.remove('active'));
                this.classList.add('active');
                
                // Show/hide forms
                document.querySelectorAll('.auth-form').forEach(form => {
                    form.style.display = 'none';
                });
                document.getElementById(targetTab + '-form').style.display = 'block';
            });
        });

        // Animate on scroll
        const animateOnScroll = () => {
            const elements = document.querySelectorAll('.animate-on-scroll');
            elements.forEach(element => {
                const elementTop = element.getBoundingClientRect().top;
                const windowHeight = window.innerHeight;
                
                if (elementTop < windowHeight - 100) {
                    element.classList.add('visible');
                }
            });
        };

        window.addEventListener('scroll', animateOnScroll);
        window.addEventListener('load', animateOnScroll);
        
        // Initialize animations
        setTimeout(animateOnScroll, 100);
    </script>
    <script>
      // Tab switching based on server variable
      document.addEventListener('DOMContentLoaded', function() {
        var tab = "<%= tab %>";
        if (tab === "signup") {
          document.querySelector('.auth-tab[data-tab="signup"]').classList.add('active');
          document.querySelector('.auth-tab[data-tab="signin"]').classList.remove('active');
          document.getElementById('signup-form').style.display = 'block';
          document.getElementById('signin-form').style.display = 'none';
        } else {
          document.querySelector('.auth-tab[data-tab="signin"]').classList.add('active');
          document.querySelector('.auth-tab[data-tab="signup"]').classList.remove('active');
          document.getElementById('signin-form').style.display = 'block';
          document.getElementById('signup-form').style.display = 'none';
        }
      });
    </script>
</body>
</html>